{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": ".build",
    "rootDir": "./",
    "preserveConstEnums": true
  },
  "include": ["backend"]
}
